<div class="signup-form">
  <h2 class="signup-form__title">アカウント登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "signup-form__input", placeholder: "メールアドレス" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", class: "signup-form__input", placeholder: "パスワード(6文字以上)" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "signup-form__input", placeholder: "パスワード確認" %>
    </div>

    <div class="actions">
      <%= f.submit "登録", class: "signup-form__submit" %>
    </div>
  <% end %>

  <%= link_to "ログイン画面へ", new_user_session_path, class: "signup-form__link" %>
</div>